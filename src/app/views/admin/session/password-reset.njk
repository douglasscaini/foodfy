{% extends 'layouts/main.njk' %}

{% block head %}
  <title>Foodfy - Resetar a senha</title>
{% endblock %}

{% block content %}
  <div class="logo-container">
    <a href="/"><img src="/assets/logo-black.png" alt="Logo Foodfy"></a>
  </div>
  <form method="POST" action="/admin/users/password-reset">
    <div class="session-form">

      <div class="session-form-content">
        <div class="session-form-header">
          <h2>Nova Senha</h2>
        </div>

        <div class="session-form-inputs">
          <h4>E-mail</h4>
          <input type="email" name="email" value="{{user.email}}" class="{% if error %} error {% endif %}" placeholder="Digite seu e-mail" onblur="Validate.apply(this, 'isEmail')" required>
        </div>

        <div class="session-form-inputs">
          <h4>Nova senha</h4>
          <input type="password" name="password" class="{% if error %} error {% endif %}" placeholder="Digite sua nova senha" required>
        </div>

        <div class="session-form-inputs">
          <h4>Repetir senha</h4>
          <input type="password" name="passwordRepeat" class="{% if error %} error {% endif %}" placeholder="Repita a nova senha" required>
        </div>

        <input type="hidden" name="token" value="{{token}}">

        <div class="session-form-footer-forgot">
          <button type="submit">Nova Senha</button>
        </div>
      </div>
    </div>
  </form>
{% endblock %}