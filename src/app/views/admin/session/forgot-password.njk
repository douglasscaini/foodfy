{% extends 'layouts/main.njk' %}

{% block head %}
  <title>Foodfy - Esqueceu a senha?</title>
{% endblock %}

{% block content %}
  <form method="POST" action="/admin/users/forgot-password">
    <div class="session-form">

      <div class="session-form-content">
        <div class="session-form-header">
          <h2>Esqueceu a Senha?</h2>
        </div>

        <div class="session-form-inputs">
          <h4>E-mail</h4>
          <input type="email" name="email" value="{{user.email}}" class="{% if error %} error {% endif %}" placeholder="Digite seu e-mail para recuperar sua senha" required>
        </div>

        <div class="session-form-footer-forgot">
          <button type="submit">Recuperar</button>
        </div>
      </div>
    </div>
  </form>
{% endblock %}