<html>
<head>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="/styles/parts/messages.css">
  <link rel="stylesheet" href="/styles/session/session.css">
  <title>Foodfy - Login</title>
</head>
<body>
  {% include "parts/messages.njk" %}

  <div class="logo-container">
     <a href="/"><img src="/assets/logo-black.png" alt="Logo Foodfy"></a>
  </div>
  <form method="POST" action="/admin/users/login">
    <div class="session-form">

      <div class="session-form-content">
        <div class="session-form-header">
          <h2>Iniciar Sess√£o</h2>
        </div>

        <div class="session-form-inputs">
          <h4>E-mail</h4>
          <input type="email" name="email" value="{{user.email}}" class="{% if error %} error {% endif %}" placeholder="Digite seu e-mail" required>
        </div>

        <div class="session-form-inputs">
          <h4>Senha</h4>
          <input type="password" name="password" class="{% if error %} error {% endif %}" placeholder="Digite sua senha" required>
        </div>

        <div class="session-form-footer">
          <a href="/admin/users/forgot-password">Perdeu a senha?</a>
          <button type="submit">Acessar</button>
        </div>
      </div>
    </div>
  </form>
</body>
</html>