{% extends 'layouts/admin.njk' %}

{% block head %}
  <title>Admin - Chef</title>
{% endblock %}

{% block content %}
  <div class="top-content">
    <h2>Chef: {{chef.name}}</h2>
    <a href="/admin/chefs/{{chef.id}}/edit" class="button-action-a">Editar Chef</a>
  </div>

  <div class="page-content">
    <div class="center-image">
      <img class="chef-image-show" src="{{chef.file.path}}" alt="Imagem de {{chef.name}}">
    </div>

    <h1>{{chef.name}}</h1>
      {% if not chef.recipes.length %}
        <h5>0 receitas</h5>
      {% else %}
        <h5>{{chef.recipes.length}} {{"receita" if chef.recipes.length == 1 else "receitas"}}</h5>
      {% endif %}

    <div class="title-button">
      <h3>Receitas</h3>
    </div>

    <div class="cards-admin">
      {% for recipe in chef.recipes %}
        <div class="card-admin">
          <div class="card-admin-img-content">
            <img src="{{recipe.file.path}}" alt="Imagem de {{recipe.title}}">
          </div>
          <div class="card-admin-content">
            <h4>{{recipe.title}}</h4>
            <p>por {{chef.name}}</p>
            <a href="/admin/recipes/{{recipe.id}}" class="button-view">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}