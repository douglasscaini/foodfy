{% extends 'layouts/admin.njk' %}

{% block head %}
  <title>Admin - Chefs</title>
{% endblock %}

{% block content %}
  <h2>Gerenciar Chefs</h2>

  <div class="cards-chefs">
    {% for chef in chefs %}
      <div class="card-chef">
        <div class="card-chef-img-content">
          <img src="{{chef.src}}" alt="Imagem de {{chef.name}}">
        </div>

        <div class="card-chef-content">
          <h4>{{chef.name}}</h4>
          <a href="/admin/chefs/{{chef.id}}" class="button-view">Visualizar</a>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}