{% extends 'layouts/main.njk' %}

{% block head %}
  <title>Foodfy - Chefs</title>
{% endblock %}

{% block content %}
  {% if not chefs.length %}
    <div class="content-not-found">
      <h2>Nenhum chefe tem receita cadastrada no momento...</h2>  
    </div>   
  {% else %}
    <div class="cards-chefs">
      {% for chef in chefs %}
        <div class="card-chef">
          <div class="card-chef-img-content">
            <img src="{{chef.file.path}}" alt="Imagem de {{chef.name}}">
          </div>

          <div class="card-chef-content">
            <h4>{{chef.name}}</h4>
              {% if not chef.recipes.length %}
                <p>0 receitas</p>
              {% else %}
                <p>{{chef.recipes.length}} {{"receita" if chef.recipes.length == 1 else "receitas"}}</p>
              {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
{% endblock %}