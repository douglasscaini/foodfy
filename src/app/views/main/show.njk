{% extends 'layouts/users.njk' %}

{% block head %}
  <title>Foodfy - {{recipe.title}}</title>
{% endblock %}

{% block content %}
  <div class="page-content">
    <div class="gallery">
      <div class="highlight">
        <img src="{{files[0].src}}" alt="Imagem de {{files[0].name}}">
      </div>
      <div class="gallery-preview">
        {% for image in files %}
          <img
            src="{{image.src}}"
            alt="Imagem de {{image.name}}"
            {% if loop.index0 == 0 %}
              class="active"
            {% endif %}
            onclick="ImageGallery.setImage(event)"
          >
        {% endfor %}
      </div>
    </div>

    <h1>{{recipe.title}}</h1>
    <h5>por {{recipe.chef_name}}</h5>

    <div class="title-button">
      <h3>Ingredientes</h3>
      <h4 class="button-show-hide">ESCONDER</h4>
    </div>

    <div class="content-show-hide">
      {% for ingredient in recipe.ingredients %}
        <li>{{ingredient}};</li>
      {% endfor %}
    </div>

    <div class="title-button">
      <h3>Modo de preparo</h3>
      <h4 class="button-show-hide">ESCONDER</h4>
    </div>

    <div class="content-show-hide">
      {% for element in recipe.preparation %}
        <p id="text-left">{{element}}</p>
      {% endfor %}
    </div>

    <div class="title-button">
      <h3>Informações adicionais</h3>
      <h4 class="button-show-hide">ESCONDER</h4>
    </div>

    <div class="content-show-hide">
      <p id="text-left">{{recipe.information}}</p>
    </div>
  </div>
{% endblock %}