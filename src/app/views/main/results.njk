{% extends 'layouts/main.njk' %}

{% block head %}
  <title>Foodfy - Resultados</title>
{% endblock %}

{% block content %}
  <main>
    {% if not filter %}
      <h2>Buscando por: "todas as receitas"...</h2>
    {% else %}
      <h2>Buscando por: "{{filter}}"...</h2>
    {% endif %}
    
    <div class="cards">
      {% for recipe in recipes %}
        <div class="card">
          <a href="/recipes/{{recipe.id}}">
            <img src="{{recipe.files[0].path}}" alt="Imagem de {{recipe.title}}">
            <h4>{{recipe.title}}</h4>
            <p>por {{recipe.chef.name}}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </main>
  
  <div class="pagination" data-page={{pagination.page}} data-total={{pagination.total}}></div>
{% endblock %}