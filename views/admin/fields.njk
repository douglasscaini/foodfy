<div class="fields">
    <div class="image">
        <h4>Imagem da receita</h4>
        <input type="url" name="image" value="{{recipe.image}}">
    </div>

    <div class="title">
        <h4>Título da receita</h4>
        <input type="text" name="title" value="{{recipe.title}}">
    </div>

    <div class="author">
        <h4>Autor da receita</h4>
        <input type="text" name="author" value="{{recipe.author}}">
    </div>

    <div id="ingredients">
        <h4>Ingredientes</h4>
        {% if recipe.ingredients %}
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input type="text" name="ingredients[]" value="{{ingredient}}"/>
                </div>
            {% endfor %}
        {% else %}
            <div class="ingredient">
                <input type="text" name="ingredients[]" value="{{ingredient}}"/>
            </div>
        {% endif %}
    </div>
    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

    <div id="preparation">
        <h4>Modo de preparo</h4>
        {% if recipe.preparation %}
            {% for item_preparation in recipe.preparation %}
                <div class="preparation">
                    <input type="text" name="preparation[]" value="{{item_preparation}}"/>
                </div>
            {% endfor %}
        {% else %}
            <div class="preparation">
                <input type="text" name="preparation[]" value="{{item_preparation}}"/>
            </div>
        {% endif %}
    </div>
    <button type="button" class="add-preparation">Adicionar novo passo</button>

    <div class="information">
        <h4>Informações adicionais</h4>
        <textarea id="information" name="information">{{recipe.information}}</textarea>
    </div>
</div>